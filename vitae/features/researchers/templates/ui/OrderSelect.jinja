{#def selected: str #}

{% set orders = [("", "Ordenar"), ("asc", "A-Z"), ("desc", "Z-A")] %}

<select id="sort-select" name="sort" form="filters-form" 
    class="px-3 py-2 border-2 border-gray-200 rounded-md text-sm">
    {% for (value, display) in orders %}
        <ui.Option value={{value}} selected={{selected}}>
            {{display}}
        </ui.Option>
    {% endfor %}
</select>