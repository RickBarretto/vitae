{#def
    placeholder: str,
    on_url: str,
    selected: str,
    available: list[str] = []
#}

<div>
    <h3 class="text-sm font-semibold text-gray-700 mb-2">{{content}}</h3>
    <select name="country" class="w-full px-3 py-2 border-2 border-gray-200 rounded-md text-sm focus:outline-none focus:ring-2 focus:ring-indigo-300 focus:border-indigo-400">
        <option value="">{{placeholder}}</option>
        {% for country in available %}
            <option value="{{ country }}" {% if selected == country %}selected{% endif %}>
                {{ country | title }}
            </option>
        {% endfor %}
    </select>
</div>